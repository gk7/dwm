#Maintainer: illusionist
#github.com/nixmeal
pkgname=dwm
pkgver=6.0
pkgrel=1
pkgdesc="A dynamic window manager for X"
url="http://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libxinerama' 'libx11')
options=(zipman)
provides=('dwm')
_source=(http://dl.suckless.org/dwm/dwm-$pkgver.tar.gz
        config.h)
_patches=(
00-dwm-6.0-buildflags.diff
01-dwm-6.0-xft.diff
02-dwm-6.0-pertag2.diff
03-dwm-6.0-status_occupiedcol.diff
04-dwm-6.0-enternotify_reload.diff
05-dwm-6.0-centred_floating.diff
06-dwm-6.0-layout.diff
07-dwm-6.0-layout_cycle.diff
08-dwm-6.0-single_window.diff
)

source=(${_source[@]} ${_patches[@]})

build() {
cd $srcdir/$pkgname-$pkgver

  for PATCH in "${_patches[@]}"; do
  	echo "=> $PATCH"
    patch < ../$PATCH || return 1
  done

  cp $srcdir/config.h config.h

  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make PREFIX=/usr DESTDIR=$pkgdir install
  install -m644 -D LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE && \
  install -m644 -D README $pkgdir/usr/share/doc/$pkgname/README
  mv $startdir/PKGBUILD $startdir/PKGBUILD-old
  mv $startdir/postinstall $startdir/PKGBUILD
}
